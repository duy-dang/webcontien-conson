extends ../layout/header

block content
    h1.text-center.mb-5 Chi tiết 
    .card.mt-5(style='width:40%')
        img.card-img-top(src= conson.conson_img  , alt='Card image')
        .card-body
            h4.card-title= conson.conson_ten 
            p.card-text Gi&aacute; : li&ecirc;n h&#x1EC7;
            a.btn.btn-danger(href='/addsp/' + conson.conson_ten ) Đặt hàng
