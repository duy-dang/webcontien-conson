        h5#contienbetong Con ti&#x1EC7;n B&ecirc; t&ocirc;ng
    #contien.contien.row
        each contien in contiens
            .col-lg-4.col-md-6.col-sm-6.col-6
                .card
                    img.card-img-top(src=contien.contien_img, alt='Card image')
                    .card-body
                        h4.card-title= contien.contien_ten
                        p.card-text Giá : liên hệ
                        .btn-group.d-flex.justify-content-center
